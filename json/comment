#!/bin/bash
case "$1" in
  index)
    curl --request POST --header "Content-Type: application/json" "http://localhost:9000/posts/1377495/comments" --data @`dirname $0`/comment.json --silent && echo
    ;;
  delete)
    curl --request DELETE "http://localhost:9000/posts/1377495/comments/1" --silent && echo
    ;;
  *)
    echo "Usage: comment {index|delete}"
    ;;
esac
