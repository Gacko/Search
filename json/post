#!/bin/bash
case "$1" in
  index)
    curl --request POST --header "Content-Type: application/json" "http://localhost:9000/posts" --data @`dirname "$0"`/post.json --silent && echo
    ;;
  delete)
    curl --request DELETE "http://localhost:9000/posts/1377495" --silent && echo
    ;;
  *)
    echo "Usage: post {index|delete}"
    ;;
esac
