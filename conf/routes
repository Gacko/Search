# Tag
PUT           /tags                controllers.TagController.index
DELETE        /tags/:id            controllers.TagController.delete(id)

# Comment
PUT           /comments            controllers.CommentController.index
DELETE        /comments/:id        controllers.CommentController.delete(id)

# Index
GET           /index               controllers.IndexController.exists
POST          /index               controllers.IndexController.create
DELETE        /index               controllers.IndexController.delete
