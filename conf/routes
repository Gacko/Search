# Search
GET           /search                             controllers.SearchController.search(term: String)

# Post
POST          /posts                              controllers.PostController.index
POST          /posts/bulk                         controllers.PostController.bulk
DELETE        /posts/:id                          controllers.PostController.delete(id: Int)
POST          /posts/:id/tags                     controllers.PostController.indexTags(id: Int)
DELETE        /posts/:id/tags/:tag                controllers.PostController.deleteTag(id: Int, tag: Int)
POST          /posts/:id/comments                 controllers.PostController.indexComment(id: Int)
DELETE        /posts/:id/comments/:comment        controllers.PostController.deleteComment(id: Int, comment: Int)

# Index
POST          /index                              controllers.IndexController.switch
DELETE        /index                              controllers.IndexController.rollback

# Crawler
POST          /crawler/start                      controllers.CrawlerController.start
POST          /crawler/stop                       controllers.CrawlerController.stop
